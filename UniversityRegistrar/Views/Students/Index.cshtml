@{
  Layout = "_Layout";
}
@using System.Linq;
@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>;

<h1>Students</h1>

@if (@Model.Count == 0)
{
  <h3>There are no students, yet...</h3>
}

<ul>
@foreach(Student student in Model)
{
  <li>@Html.ActionLink($"{student.Name}", "Details", new {id = student.StudentId}) | @student.EnrollmentDate</li>
}
</ul>

<p>@Html.ActionLink("Add a Student", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>