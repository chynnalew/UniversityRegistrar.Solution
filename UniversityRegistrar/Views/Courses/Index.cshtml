@{
  Layout = "_Layout";
}
@using System.Linq;
@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Course>;

<h1>Course List</h1>

@if (Model.Count == 0)
{
  <p>No courses availible. Please add a course.</p>
}

<ul>
  @foreach(Course course in Model)
  {
    <li>@Html.ActionLink($"{course.CourseName}", "Details", new{ id = course.CourseId}) </li>
  }
</ul>

<p>@Html.ActionLink("Add a Course", "Create")</p>
<p>@Html.ActionLink("Return Home", "Index", "Home")</p>